{
  "name": "testing-node-actions",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "release": {
    "branches": ["main"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/exec"
    ],
    "prepareCmd": "npm install && npm version ${nextRelease.version} && npm run build",
    "publishCmd": "echo 'Publishing version ${nextRelease.version}'",
    "successCmd": "echo 'Successfully created release for version ${nextRelease.version}'",
    "failCmd": "echo 'Failed to release version ${nextRelease.version}'"
  },
  "dependencies": {
    "react": "^18",
    "react-dom": "^18",
    "next": "14.2.13"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.13"
  }
}
